<h2>Log in</h2>



  <div class="actions">
    
  </div>


<div id="main">
  <div id="pannel_center" class="pannel_e">
    <h4 class="pb-4">ログイン</h4>

    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="w-75 m-auto text-start">
      <div class="row pb-4">
        <%= f.label :email, class: "p-0" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="row pb-5">
        <%= f.label :password, class: "p-0" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="row pb-5">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>

      <div class="row pb-5">
        <%= link_to "新規ユーザー登録はこちら", new_user_registration_path, class: 'btn btn-outline-primary' %>
      </div>

    </div>
    <% end %>
    <%#= render "users/shared/links" %>
    
  </div>
</div>

