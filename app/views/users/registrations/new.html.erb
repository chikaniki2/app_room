<div id="main">
  <div id="pannel_center" class="pannel_e">
    <h4 class="pb-4">新規ユーザー登録</h4>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="w-75 m-auto text-start">
      <div class="row pb-4">
        <div class="ps-0 pb-1">
          <%= f.label :name,"名前", class:"pe-2" %>
          <span class="badge bg-danger">必須</span>
        </div>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="row pb-4">
        <div class="ps-0 pb-1">
          <%= f.label :description,"自己紹介", class:"pe-2" %>
          <span class="badge bg-danger">必須</span>
        </div>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="row pb-4">
        <div class="ps-0 pb-1">
          <%= f.label :email,"メールアドレス", class: "pe-2" %>
          <span class="badge bg-danger">必須</span>
        </div>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="row pb-4">
        <div class="ps-0 pb-1">
          <%= f.label :password,"パスワード（６文字以上）", class: "pe-2" %>
          <span class="badge bg-danger">必須</span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="row pb-5">
        <div class="ps-0 pb-1">
          <%= f.label :password_confirmation,"パスワードの再確認", class: "pe-2"%>
          <span class="badge bg-danger">必須</span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="row pb-5">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>

      <div class="row pb-5">
        <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: 'btn btn-outline-primary' %>
      </div>

    </div>
	  <% end %>
  </div>
  <%#= render "users/shared/links" %>
</div>
