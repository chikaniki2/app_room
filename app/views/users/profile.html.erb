<h2>新規作成</h2>

<% if  flash[:notice] %>
    <p class="notice"><%= flash[:notice] %>
<% end %>

<%= form_with model: @user, local: true do |f| %>
  <% #=render "shared/error", obj: @user %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name ,value:@user.name%></td>
    </tr>

    <tr>
      <th><%= f.label :description ,"自己紹介" %></th>
      <td><%= f.text_area :description, value:@user.description, class:'aaa' %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "更新する"%></li>
    </ul>
  </div>
<% end %>

